class Font:
    c"void *font_p;"

    def __init__(self, path: string, size: i64):
        res = 0
        path_utf8 = path.to_utf8()
        path_utf8 += 0

        c"""
        this->font_p = TTF_OpenFont((const char *)path_utf8.m_bytes->data(), size);

        if (this->font_p == NULL) {
            res = 1;
        }
        """

        if res != 0:
            raise SdlError("Font()")

    def render_solid(self, text: string, color: Color) -> Surface:
        text_utf8 = text.to_utf8()
        text_utf8 += 0
        surface = Surface()
        res = 0

        c"""
        SDL_Color c_color;

        c_color.r = color->r;
        c_color.g = color->g;
        c_color.b = color->b;
        c_color.a = color->a;

        surface->surface_p = TTF_RenderText_Solid(
            (TTF_Font *)this->font_p,
            (const char *)text_utf8.m_bytes->data(),
            c_color);

        if (surface->surface_p == NULL) {
            res = 1;
        }
        """

        if res != 0:
            raise SdlError("img_load()")

        return surface

class Music:
    c"void *music_p;"

    def __init__(self, path: string):
        path_utf8 = path.to_utf8()
        path_utf8 += 0
        res = 0
        message: string = None

        c"""
        this->music_p = Mix_LoadMUS((const char *)path_utf8.m_bytes->data());

        if (this->music_p == NULL) {
            message = String((char *)Mix_GetError());
            res = 1;
        }
        """

        if res != 0:
            raise SdlError(message)

    def play(self, loops: i64):
        res = 0

        c"""
        res = Mix_PlayMusic((Mix_Music *)this->music_p, loops);
        """

        if res != 0:
            raise SdlError("play music")

