@trait
class Event:
    pass

class QuitEvent(Event):
    pass

class KeyDownEvent(Event):
    keysym: KeySym

class KeySym:
    sym: KeyCode

def poll_event() -> Event:
    res = 0
    key_code = 0

    c"""
    SDL_Event event;

    res = SDL_PollEvent(&event);
    """

    if res == 0:
        return None

    c"""
    switch (event.type) {

    case SDL_QUIT:
    """

    return QuitEvent()

    c"""
    case SDL_KEYDOWN:
        key_code = event.key.keysym.sym;
    """

    try:
        return KeyDownEvent(KeySym(KeyCode(key_code)))
    except ValueError:
        return None

    c"}"

    return None

@enum
class KeyCode:
    Space = c"SDLK_SPACE"
    L = c"SDLK_l"
    X = c"SDLK_x"
    Z = c"SDLK_z"
    Right = c"SDLK_RIGHT"
    Left = c"SDLK_LEFT"
    Down = c"SDLK_DOWN"
    Up = c"SDLK_UP"

